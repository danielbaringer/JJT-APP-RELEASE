<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/listview_layout_model"
    android:layout_marginTop="4dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginBottom="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/layoutConteudo">


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnReplicarPedido"
            android:text="REPLICAR PEDIDO"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtTituloCodPedido"
            android:layout_below="@+id/btnReplicarPedido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cod Pedido: "
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtTituloVlrPedido"
            android:layout_toRightOf="@+id/txtTituloCodPedido"
            android:layout_below="@+id/btnReplicarPedido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0001"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:textSize="20dp"/>


        <TextView
            android:id="@+id/txtTituloDtPedido"
            android:layout_below="@+id/txtTituloCodPedido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data: "
            android:textSize="20dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/txtTituloVlrDtPedido"
            android:layout_toRightOf="@+id/txtTituloDtPedido"
            android:layout_below="@+id/txtTituloVlrPedido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01/01/0001"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/txtTituloQtdeProdsPedido"
            android:layout_below="@+id/txtTituloDtPedido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total de ReferÃªncias: "
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtTituloVlrQtdeProdsPedido"
            android:layout_toRightOf="@+id/txtTituloQtdeProdsPedido"
            android:layout_below="@+id/txtTituloVlrDtPedido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/txtTituloTotalItensPedido"
            android:layout_below="@+id/txtTituloQtdeProdsPedido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Itens Pedido: "
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtTituloVlrTotalItensPedido"
            android:layout_toRightOf="@+id/txtTituloQtdeProdsPedido"
            android:layout_below="@+id/txtTituloVlrQtdeProdsPedido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="14"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:textSize="20dp"/>


        <TextView
            android:id="@+id/txtTituloTotalLlabelPedido"
            android:layout_below="@+id/txtTituloTotalItensPedido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total (R$): "
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtTituloTotalVlrPedido"
            android:layout_toRightOf="@+id/txtTituloTotalLlabelPedido"
            android:layout_below="@+id/txtTituloTotalItensPedido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0,00"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:textSize="20dp"/>

        <ScrollView
            android:layout_below="@+id/txtTituloTotalLlabelPedido"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/scrollView6" android:fillViewport="true">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ListView
                    android:id="@+id/listaDetalhadaProdutos"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />


            </LinearLayout>
        </ScrollView>


    </RelativeLayout>


</RelativeLayout>