<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/listview_layout_model"
    android:minHeight="90dp"
    android:maxHeight="90dp"
    android:layout_marginTop="4dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginBottom="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:gravity="center_horizontal"
        android:id="@+id/layoutConteudo">


        <TextView
            android:id="@+id/txtTituloProdFinalizar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NOME DO PRODUTO"
            android:textStyle="bold"
            android:textSize="25dp"/>

        <TextView
            android:id="@+id/txtQtdeProdFinalizar"
            android:layout_below="@+id/txtTituloProdFinalizar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="QTDE DO PRODUTO"/>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/layoutConteudoValores"
        android:layout_below="@+id/layoutConteudo"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtLabelProdVlrUnit"
            android:layout_width="wrap_content"
            android:gravity="left"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="UnitÃ¡rio (R$):"/>


        <TextView
            android:id="@+id/txtProdValorUnitario"
            android:layout_width="wrap_content"
            android:gravity="left"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="1.00"/>

        <TextView
            android:id="@+id/txtLabelProdValorTotal"
            android:gravity="right"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total (R$): "/>



        <TextView
            android:id="@+id/txtProdValorTotal"
            android:gravity="right"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:text="1.00"/>


    </LinearLayout>


</RelativeLayout>